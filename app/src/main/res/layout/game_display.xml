<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ff73b4eb"
    android:gravity="center_vertical"
    tools:context=".GameDisplayActivity">


    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Souhaites tu faire une activitÃ© artistique ou ludique?"
        android:textSize="33sp"
        android:textColor="#ffffffff"
        android:gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >

        <Button
            android:id="@+id/button1"
            android:text="@string/answer_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffff9016"
            android:layout_margin="4dp"
            android:textColor="#ffffffff"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/button2"
            android:text="@string/answer_maybe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffff9016"
            android:layout_margin="4dp"
            android:textColor="#ffffffff"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/button3"
            android:text="@string/answer_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffff9016"
            android:layout_margin="4dp"
            android:textColor="#ffffffff"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/number_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textColor="#ffffffff"
            android:gravity="right"
            android:text="1/10"
            android:textSize="20sp"/>

    </LinearLayout>

</LinearLayout>
